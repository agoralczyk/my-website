{
  "name": "personal-website",
  "version": "0.0.3",
  "engines": {
    "node": "5.11.1",
    "npm": "3.8.6"
  },
  "scripts": {
    "start": "tsc && concurrently \"npm run watch-css\" \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "build-css": "node-sass --include-path scss scss/main.scss app/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "dependencies": {
    "@angular/common":  "2.0.0-rc.2",
    "@angular/compiler":  "2.0.0-rc.2",
    "@angular/core":  "2.0.0-rc.2",
    "@angular/http":  "2.0.0-rc.2",
    "@angular/platform-browser":  "2.0.0-rc.2",
    "@angular/router":  "2.0.0-rc.2",
    "es6-shim": "^0.35.0",
    "express": "^4.13.3",
    "font-awesome": "^4.6.3",
    "node-sass": "^3.8.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "0.19.27",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "lite-server": "^2.2.0",
    "node-sass": "^3.8.0",
    "typescript": "^1.8.10"
  }
}
