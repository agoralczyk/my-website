{
  "name": "personal-website",
  "version": "0.0.3",
  "engines": {
    "node": "5.11.1",
    "npm": "3.8.6"
  },
  "scripts": {
    "start": "tsc && concurrently \"npm run watch-css\" \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "postinstall": "gulp",
    "build-css": "node-sass --include-path scss scss/main.scss css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "build": "tsc && gulp",
    "prod": "npm run build && cd build && npm i && node server.js"
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.2",
    "@angular/compiler": "2.0.0-rc.2",
    "@angular/core": "2.0.0-rc.2",
    "@angular/forms": "0.1.0",
    "@angular/http": "2.0.0-rc.2",
    "@angular/platform-browser": "2.0.0-rc.2",
    "@angular/platform-browser-dynamic": "2.0.0-rc.2",
    "@angular/router": "2.0.0-rc.2",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.2",
    "core-js": "^2.4.0",
    "express": "^4.13.3",
    "font-awesome": "^4.6.3",
    "gumshoe": "github:cferdinandi/gumshoe",
    "ng2-translate": "^2.2.0",
    "node-sass-middleware": "^0.9.8",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "smooth-scroll": "github:cferdinandi/smooth-scroll",
    "systemjs": "0.19.27",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "del": "^2.2.1",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-typescript": "^2.13.6",
    "lite-server": "^2.2.0",
    "node-sass": "^3.8.0",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"
  }
}
